// Slowly building a lexer using pettyscript.

struct Lexer { str, remaining }

enum Token {
    LParen,
    RParen,
    LBrace,
    RBrace,
    LBracket,
    RBracket,
    Comma,
    Dot,
    Bang,
    Semicolon,
    Colon,
    Plus,
    Minus,
    Star,
    Slash,
    Percent,
    Pipe,
    Ampersand,
    RAngle,
    LAngle,
    RAngleEq,
    LAngleEq,
    Eq,
    EqEq,
    BangEq,
    Range,
    RangeInclusive,
    // Keywords
    Or,
    And,
    If,
    Else,
    In,
    Fn,
    For,
    Break,
    Return,
    Struct,
    Enum,
    // Literals
    Int,
    Character,
    String,
    Ident,
}

fn lexer_next(lexer) {
    lexer.remaining = lexer.remaining.trim();
    const first_char = lexer.remaining[0];
    let token;

    while true {
        let skip = 1;

        if lexer.remaining.starts_with("//") {
            let i = 2;
            while i < lexer.remaining.len && lexer.remaining[i] != "\n" {
                i = i + 1;
            }
            lexer.remaining = lexer.remaining[i..lexer.remaining.len];
            continue;
        }
        // Keywords
        else if lexer.remaining.starts_with("or") { token = Token.Or; skip = 2; }
        else if lexer.remaining.starts_with("||") { token = Token.Or; skip = 2; }
        else if lexer.remaining.starts_with("and") { token = Token.And; skip = 3; }
        else if lexer.remaining.starts_with("&&") { token = Token.And; skip = 2; }
        else if lexer.remaining.starts_with("if") { token = Token.If; skip = 2; }
        else if lexer.remaining.starts_with("else") { token = Token.Else; skip = 4; }
        else if lexer.remaining.starts_with("in") { token = Token.In; skip = 2; }
        else if lexer.remaining.starts_with("fn") { token = Token.Fn; skip = 2; }
        else if lexer.remaining.starts_with("for") { token = Token.For; skip = 3; }
        else if lexer.remaining.starts_with("break") { token = Token.Break; skip = 5; }
        else if lexer.remaining.starts_with("return") { token = Token.Return; skip = 6; }
        else if lexer.remaining.starts_with("struct") { token = Token.Struct; skip = 6; }
        else if lexer.remaining.starts_with("enum") { token = Token.Enum; skip = 4; }
        // Symbols
        else if lexer.remaining.starts_with("==") { token = Token.EqEq; skip = 2; }
        else if lexer.remaining.starts_with("!=") { token = Token.BangEq; skip = 2; }
        else if lexer.remaining.starts_with("<=") { token = Token.LAngleEq; skip = 2; }
        else if lexer.remaining.starts_with(">=") { token = Token.RAngleEq; skip = 2; }
        else if lexer.remaining.starts_with("..=") { token = Token.RangeInclusive; skip = 3; }else if first_char == '[' { token = Token.LBracket; }
        else if lexer.remaining.starts_with("..") { token = Token.Range; skip = 2; }
        else if first_char == ']' { token = Token.RBracket; }
        else if first_char == '(' { token = Token.LParen; }
        else if first_char == ')' { token = Token.RParen; }
        else if first_char == '{' { token = Token.LBrace; }
        else if first_char == '}' { token = Token.RBrace; }
        else if first_char == '<' { token = Token.LAngle; }
        else if first_char == '>' { token = Token.RAngle; }
        else if first_char == ';' { token = Token.Semicolon; }
        else if first_char == ':' { token = Token.Colon; }
        else if first_char == ',' { token = Token.Comma; }
        else if first_char == '.' { token = Token.Dot; }
        else if first_char == '+' { token = Token.Plus; }
        else if first_char == '-' { token = Token.Minus; }
        else if first_char == '*' { token = Token.Star; }
        else if first_char == '/' { token = Token.Slash; }
        else if first_char == '%' { token = Token.Percent; }
        else if first_char == '|' { token = Token.Pipe; }
        else if first_char == '&' { token = Token.Ampersand; }
        else if first_char == '=' { token = Token.Eq; }
        // Literals
        else if first_char.is_digit() || first_char == '_' {
            while lexer.remaining[skip].is_digit() {
                skip = skip + 1;
            }
            token = Token.Int;
        }
        else if first_char == "'" {
            skip = skip + 2;
            token = Token.Character;
        } 
        else if first_char == '"' {
            while lexer.remaining[skip] != '"' {
                skip = skip + 1;
            }
            skip = skip + 1;
            token = Token.String;
        } else if first_char.is_alphabetic() {
            while lexer.remaining[skip].is_alphabetic() {
                skip = skip + 1;
            }
            token = Token.Ident;
        } else {
            // TODO: f strings
            println("Invalid Symbol: {}");
            println(first_char);
            exit(1);
        }
        lexer.remaining = lexer.remaining[skip..lexer.remaining.len];
        return token;
    } 
}

fn main() {
    let str = read_file("examples/fizzbuzz.pty");
    let lexer = Lexer { str, remaining: str };
    while true {
        let token = lexer_next(lexer);
        println(token);
        if lexer.remaining == "" {
            break;
        }
    }
}
